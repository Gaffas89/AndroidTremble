<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/tremble_login_background3"
    tools:context="com.techzonecs.tremble.controller.LoginPageActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/tremble_temp_logo3"
            android:id="@+id/imageView_LoginPage"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/TFfield_SISID"
            android:hint="SISID"
            android:textColorHint="#ecebeb"
            android:textColor="#ffffff"
            android:inputType="numberDecimal"
            android:layout_above="@+id/TFfield_pw"
            android:layout_alignStart="@+id/TFfield_pw"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/TFfield_pw"
            android:textColorHint="#ecebeb"
            android:hint="Password"
            android:textColor="#ffffff"
            android:layout_above="@+id/tv_forget_pw"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Forget Password?"
            android:id="@+id/tv_forget_pw"
            android:textColor="#7acdeb"
            android:layout_above="@+id/btn_signin"
            android:layout_alignEnd="@+id/TFfield_pw"
            android:layout_marginBottom="37dp"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginRight="50dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_signin1"
            android:background="@drawable/login"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
