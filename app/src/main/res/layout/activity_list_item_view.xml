<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.techzonecs.tremble.controller.ListItemViewActivity"
    android:background="#d3f3e2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Course Name"
            android:id="@+id/tv_course_name"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_trainer"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location"
            android:id="@+id/tv_location_name"
            android:layout_below="@+id/tv_date"
            android:layout_alignStart="@+id/tv_date"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="33dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Class Name"
            android:id="@+id/tv_class_name"
            android:layout_below="@+id/tv_course_name"
            android:layout_toStartOf="@+id/tv_zone"
            android:layout_gravity="center_horizontal"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Zone"
            android:id="@+id/tv_zone"
            android:layout_alignBaseline="@+id/tv_class_name"
            android:layout_alignBottom="@+id/tv_class_name"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:textSize="22dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trainer : "
                android:id="@+id/tv_Trainer_Name"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tv_trainer"
                android:layout_below="@+id/tv_class_name"
                android:layout_alignStart="@+id/tv_class_name"
                android:text="Trainer Name"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015 - 11 - 2"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015 - 11 - 3"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015 - 11 - 4"
                android:id="@+id/textView12"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015 - 11 - 5"
                android:id="@+id/textView13"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS Location"
            android:id="@+id/btn_location_gps"
            android:layout_gravity="right" />

    </LinearLayout>

</LinearLayout>
