<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.techzonecs.tremble.controller.ListItemViewActivity"
    android:background="@color/bgd">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Course Name"
            android:id="@+id/tv_course_name"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_trainer"
            android:textStyle="bold"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location"
            android:id="@+id/tv_location_name"
            android:layout_below="@+id/tv_date"
            android:layout_alignStart="@+id/tv_date"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="33dp"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Class Name"
            android:id="@+id/tv_class_name"
            android:layout_below="@+id/tv_course_name"
            android:layout_toStartOf="@+id/tv_zone"
            android:layout_gravity="center_horizontal"
            android:textSize="22dp"
            android:textColor="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Zone"
            android:id="@+id/tv_zone"
            android:layout_alignBaseline="@+id/tv_class_name"
            android:layout_alignBottom="@+id/tv_class_name"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:textSize="22dp"
            android:textColor="@color/blue" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trainer : "
                android:id="@+id/tv_Trainer_Name"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/dark_bgd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tv_trainer"
                android:layout_below="@+id/tv_class_name"
                android:layout_alignStart="@+id/tv_class_name"
                android:text="Trainer Name"
                android:textSize="22dp"
                android:textColor="@color/dark_bgd" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="0.34">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DD-MM-YYYY"
                android:id="@+id/textView1stDate"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp"
                android:textColor="@color/light_bgd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DD-MM-YYYY"
                android:id="@+id/textView2ndDate"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp"
                android:textColor="@color/light_bgd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DD-MM-YYYY"
                android:id="@+id/textView3rdDate"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp"
                android:textColor="@color/light_bgd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DD-MM-YYYY"
                android:id="@+id/textView4thDate"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp"
                android:textColor="@color/light_bgd" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="50dp"
                android:id="@+id/imageViewMap"
                android:background="@drawable/location2"
                android:layout_marginLeft="50dp"
                android:layout_weight="0.12" />

            <ImageView
                android:layout_width="71dp"
                android:layout_height="55dp"
                android:layout_marginLeft="150dp"
                android:id="@+id/imageView8"
                android:src="@drawable/evaluation"
                android:onClick="navigateToEvaluationView"
                android:adjustViewBounds="true" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
