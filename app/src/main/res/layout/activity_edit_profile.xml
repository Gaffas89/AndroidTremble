<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.techzonecs.tremble.controller.EditProfileActivity"
    android:background="@color/bgd"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit Profile"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColorHint="@color/dark_bgd"
        android:id="@+id/editTextName"
        android:layout_marginTop="26dp"
        android:singleLine="true"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dark_bgd" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="E-Mail"
        android:id="@+id/editTextEmail"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:layout_below="@+id/editTextName"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/dark_bgd" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        android:id="@+id/editTextMobile"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:layout_below="@+id/editTextEmail"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/dark_bgd" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:id="@+id/editTextSubject"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:layout_below="@+id/editTextMobile"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/dark_bgd" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Grade"
        android:id="@+id/editTextGrade"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:layout_below="@+id/editTextSubject"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/dark_bgd"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="New Password"
        android:id="@+id/editTextPassword"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/editTextGrade"
        android:layout_alignStart="@+id/editTextGrade"
        android:layout_alignEnd="@+id/editTextGrade"
        android:textColorHint="@color/dark_bgd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:id="@+id/editTextConfirmPass"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignStart="@+id/editTextPassword"
        android:layout_alignEnd="@+id/editTextPassword"
        android:textColorHint="@color/dark_bgd" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:background="@drawable/ic_save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
